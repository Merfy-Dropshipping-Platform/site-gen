NODE_ENV=development
LOG_LEVEL=info
SERVICE_NAME=sites-service
PORT=3114
RABBITMQ_URL=amqp://rabbitmq:password@localhost:5672
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/sites_service

# Coolify Configuration
# Set COOLIFY_MODE=http to enable real Coolify API calls (production)
COOLIFY_MODE=mock
COOLIFY_API_URL=http://localhost:8000
COOLIFY_API_TOKEN=
COOLIFY_SERVER_UUID=
COOLIFY_PROJECT_UUID=
COOLIFY_ENVIRONMENT_NAME=production
COOLIFY_WILDCARD_DOMAIN=merfy.ru

# Domain Service (RPC primary, HTTP fallback)
# DOMAIN_SERVICE_URL is used only when RPC is unavailable
DOMAIN_SERVICE_URL=http://localhost:3115
DOMAIN_RPC_TIMEOUT=10000
# Включение/выключение Astro‑сборки (по умолчанию включена)
ASTRO_BUILD_ENABLED=true

# S3/MinIO settings for static site storage
S3_ENDPOINT=http://localhost:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=merfy-sites

# Production S3 example:
# S3_ENDPOINT=https://s3.merfy.ru
# S3_PUBLIC_ENDPOINT=https://cdn.merfy.ru
# S3_BUCKET=merfy-sites

# Retention for local artifacts in days
ARTIFACT_RETENTION_DAYS=14

# Enable/disable hourly billing reconciliation job (freeze/unfreeze fallback)
BILLING_SYNC_CRON_ENABLED=true
