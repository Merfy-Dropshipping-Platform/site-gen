---
interface Props {
	name: string;
	image: string;
}

const { name, image } = Astro.props;
---

<article class="flex flex-col gap-4 sm:gap-5 md:gap-6 lg:gap-[20px]">
	<div class="w-full aspect-[400/320] bg-gray-100 rounded-lg sm:rounded-[8px] md:rounded-[10px] overflow-hidden cursor-pointer group">
		<img
			src={image}
			alt={name}
			loading="lazy"
			class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
		/>
	</div>
	<h3 class="text-base sm:text-lg md:text-xl lg:text-[24px] font-normal text-black leading-[1.366] px-2 sm:px-3 md:px-4 font-manrope">
		{name}
	</h3>
</article>
