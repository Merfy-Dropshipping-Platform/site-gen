---
interface Props {
  image?: string;
  imageAlt?: string;
  imagePosition?: 'left' | 'right';
  heading?: string;
  text?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  image,
  imageAlt = '',
  imagePosition = 'left',
  heading,
  text,
  buttonText,
  buttonLink = '#',
} = Astro.props;

const orderClass = imagePosition === 'right' ? 'md:order-2' : '';
---

<section class="section-spacing">
  <div class="page-container grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">
    <!-- Image -->
    <div class={orderClass}>
      {image && (
        <img
          src={image}
          alt={imageAlt}
          loading="lazy"
          class="w-full rounded-[var(--radius-card)]"
        />
      )}
    </div>

    <!-- Text -->
    <div class="flex flex-col gap-4">
      {heading && (
        <h2 class="text-2xl font-semibold text-theme-foreground">{heading}</h2>
      )}
      {text && (
        <p class="text-base text-theme-muted leading-relaxed">{text}</p>
      )}
      {buttonText && (
        <a
          href={buttonLink}
          class="btn-primary inline-flex items-center px-5 py-2.5 text-sm font-medium w-fit"
        >
          {buttonText}
        </a>
      )}
    </div>
  </div>
</section>
