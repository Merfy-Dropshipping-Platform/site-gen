---
interface Props {
	name: string;
	image: string;
	eager?: boolean;
}

const { name, image, eager = false } = Astro.props;
---

<article class="group cursor-pointer" role="listitem" aria-label={`Коллекция ${name}`}>
	<div class="relative w-full aspect-[430/500] bg-gray-100 rounded-xl sm:rounded-2xl overflow-hidden mb-4 sm:mb-5 md:mb-6 lg:mb-8 shadow-sm hover:shadow-lg transition-shadow duration-300">
		<img
			src={image}
			alt={`Изображение коллекции ${name}`}
			class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 ease-out"
			loading={eager ? 'eager' : 'lazy'}
			width="430"
			height="500"
		/>
		<div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300"></div>
	</div>
	<div class="px-1 sm:px-2">
		<h3 class="text-lg sm:text-xl md:text-2xl lg:text-[24px] font-normal text-black group-hover:text-gray-700 transition-colors duration-200 font-manrope">
			{name}
		</h3>
	</div>
</article>
