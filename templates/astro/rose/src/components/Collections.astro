---
interface Collection {
  name: string;
  image?: string;
  hidden?: boolean;
}

interface Props {
  title?: string;
  titleSize?: 'small' | 'medium' | 'large';
  subtitle?: string;
  collections?: Collection[];
  columnsCount?: number;
  colorScheme?: string;
  padding?: { top?: number; bottom?: number };
}

const {
  title = 'Коллекции',
  titleSize = 'medium',
  subtitle,
  collections = [],
  columnsCount = 3,
  padding,
} = Astro.props;

const padTop = padding?.top ?? 80;
const padBottom = padding?.bottom ?? 80;
const visibleCollections = collections.filter((c) => !c.hidden);
---

<section class={`collections collections--${titleSize}`} style={`padding-top: ${padTop}px; padding-bottom: ${padBottom}px;`}>
  {title && <h2 class="collections-heading">{title}</h2>}
  {subtitle && <p class="collections-subtitle">{subtitle}</p>}

  {visibleCollections.length === 0 ? (
    <p class="no-collections">Коллекции скоро появятся</p>
  ) : (
    <div class="collections-grid" style={`--columns: ${columnsCount}`}>
      {visibleCollections.map((collection) => (
        <article class="collection-card">
          <div class="collection-image-wrapper">
            {collection.image ? (
              <img src={collection.image} alt={collection.name} class="collection-image" loading="lazy" />
            ) : (
              <div class="collection-image-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21,15 16,10 5,21"/>
                </svg>
              </div>
            )}
            <div class="collection-overlay">
              <h3 class="collection-name">{collection.name}</h3>
            </div>
          </div>
        </article>
      ))}
    </div>
  )}
</section>

<style>
  .collections {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .collections-heading {
    font-family: var(--font-display);
    font-weight: 500;
    text-align: center;
    margin-bottom: 16px;
    color: var(--neutral-900);
    line-height: 1.2;
  }

  .collections--small .collections-heading { font-size: 1.5rem; }
  .collections--medium .collections-heading { font-size: 2rem; }
  .collections--large .collections-heading { font-size: 2.5rem; }

  .collections-subtitle {
    text-align: center;
    color: var(--neutral-600);
    font-size: 1.1rem;
    margin-bottom: 40px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .no-collections {
    text-align: center;
    color: var(--neutral-500);
    padding: 60px 20px;
    font-size: 1.1rem;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: 24px;
  }

  @media (max-width: 768px) {
    .collections-grid { grid-template-columns: repeat(2, 1fr); gap: 16px; }
  }

  @media (max-width: 480px) {
    .collections-grid { grid-template-columns: 1fr; }
  }

  .collection-card {
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
  }

  .collection-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
  }

  .collection-image-wrapper {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: var(--rose-50);
  }

  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }

  .collection-card:hover .collection-image {
    transform: scale(1.05);
  }

  .collection-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--rose-300);
  }

  .collection-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
    display: flex;
    align-items: flex-end;
    padding: 20px;
  }

  .collection-name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    color: #fff;
  }
</style>
