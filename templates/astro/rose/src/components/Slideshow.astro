---
interface Slide {
  id?: string;
  image?: string;
  heading?: { text?: string; size?: string };
  text?: { content?: string; size?: string };
  button?: { text?: string; link?: { href?: string } };
  position?: 'left' | 'center' | 'right';
  hidden?: boolean;
}

interface Props {
  slides?: Slide[];
  overlay?: number;
  imagePosition?: 'fullscreen' | 'window';
  size?: 'small' | 'medium' | 'large';
  interval?: number;
  pagination?: 'numbers' | 'dots' | 'counter';
}

const { slides = [], overlay = 30, size = 'medium', imagePosition = 'fullscreen', interval = 0, pagination = 'dots' } = Astro.props;
const visibleSlides = slides.filter((s) => !s.hidden);

const headingSizeClass: Record<string, string> = {
  small: 'text-[2rem]',
  medium: 'text-[3rem]',
  large: 'text-[4rem]',
};

const positionClass: Record<string, string> = {
  left: 'mr-auto',
  center: 'mx-auto text-center',
  right: 'ml-auto',
};

const containerClass = imagePosition === 'window'
  ? 'relative overflow-hidden max-w-[1200px] mx-auto rounded-2xl min-h-[60vh]'
  : 'relative overflow-hidden min-h-[80vh] w-full';
---

<section class={containerClass} data-slideshow data-interval={interval}>
  {visibleSlides.length === 0 ? (
    <div class="min-h-[400px] flex items-center justify-center bg-gray-50 text-gray-500 text-lg">
      <p>Добавьте слайды</p>
    </div>
  ) : (
    <div class="relative min-h-[inherit]">
      {visibleSlides.map((slide, i) => (
        <div
          class={`min-h-[80vh] md:min-h-[80vh] max-md:min-h-[60vh] bg-cover bg-center bg-gray-800 flex items-center relative ${i === 0 ? '' : 'hidden'}`}
          style={slide.image ? `background-image: url(${slide.image})` : ''}
          data-slide
        >
          <div class="absolute inset-0 bg-black" style={`opacity: ${overlay / 100}`}></div>
          <div class={`relative z-10 py-[60px] px-[40px] max-md:py-[40px] max-md:px-[20px] max-w-[700px] text-white ${positionClass[slide.position ?? 'center']}`}>
            {slide.heading?.text && (
              <h2 class={`font-comfortaa font-medium leading-[1.1] mb-4 ${headingSizeClass[size] ?? 'text-[3rem]'}`}>
                {slide.heading.text}
              </h2>
            )}
            {slide.text?.content && (
              <p class="text-lg leading-relaxed mb-6 opacity-90">{slide.text.content}</p>
            )}
            {slide.button?.text && (
              <a
                href={slide.button.link?.href ?? '#'}
                class="inline-flex py-3.5 px-8 text-[0.95rem] font-medium rounded-lg bg-black text-white no-underline transition-colors duration-200 hover:bg-gray-800"
              >
                {slide.button.text}
              </a>
            )}
          </div>
        </div>
      ))}
      {visibleSlides.length > 1 && (
        <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10 flex items-center gap-2">
          {visibleSlides.map((_, i) => (
            <button
              class={`w-3 h-3 rounded-full border-2 border-white transition-colors duration-200 ${i === 0 ? 'bg-white' : 'bg-transparent'}`}
              data-slide-dot={i}
              aria-label={`Slide ${i + 1}`}
            />
          ))}
        </div>
      )}
    </div>
  )}
</section>

<script>
  document.querySelectorAll('[data-slideshow]').forEach((slideshow) => {
    const slides = slideshow.querySelectorAll('[data-slide]') as NodeListOf<HTMLElement>;
    const dots = slideshow.querySelectorAll('[data-slide-dot]') as NodeListOf<HTMLElement>;
    if (slides.length <= 1) return;

    let current = 0;
    const interval = parseInt(slideshow.getAttribute('data-interval') || '0');

    function goTo(index: number) {
      slides[current].classList.add('hidden');
      dots[current]?.classList.remove('bg-white');
      dots[current]?.classList.add('bg-transparent');

      current = (index + slides.length) % slides.length;

      slides[current].classList.remove('hidden');
      dots[current]?.classList.add('bg-white');
      dots[current]?.classList.remove('bg-transparent');
    }

    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => goTo(i));
    });

    if (interval > 0) {
      setInterval(() => goTo(current + 1), interval);
    }
  });
</script>
