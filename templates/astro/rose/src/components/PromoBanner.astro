---
interface Props {
  text?: string;
  link?: any;
  size?: string;
  colorScheme?: string;
}

const { text = 'Скидка 10% на общую сумму заказа от 9 000₽', link, size = 'small', colorScheme } = Astro.props;

const href = typeof link === 'object' ? link?.href : (link || '#');

const sizeClasses: Record<string, string> = {
  small: 'py-2 sm:py-2.5 md:py-3 text-xs sm:text-sm md:text-base',
  medium: 'py-3 sm:py-3.5 md:py-4 text-sm sm:text-base md:text-lg',
  large: 'py-4 sm:py-4.5 md:py-5 text-base sm:text-lg md:text-xl',
};
const sizeClass = sizeClasses[size] || sizeClasses.small;
---

<div class={`bg-black text-white w-full ${sizeClass}`}>
  <div class="w-full max-w-[1920px] mx-auto px-3 sm:px-4 md:px-6 lg:px-8 xl:px-12 2xl:px-16">
    <a
      href={href}
      class="block text-center hover:opacity-80 transition-opacity font-normal leading-tight font-manrope"
    >
      <span class="inline-block">{text}</span>
    </a>
  </div>
</div>
