---
interface Props {
  heading?: { text?: string; size?: 'small' | 'medium' | 'large' };
  text?: { content?: string; size?: 'small' | 'medium' | 'large' };
  products?: Array<{ id: string; name: string; price: number; images?: string[]; slug?: string }>;
  productCard?: { columns?: number; cardStyle?: string };
  colorScheme?: string;
  padding?: { top?: number; bottom?: number };
}

const { heading, text, products = [], productCard, padding } = Astro.props;
const headingText = heading?.text ?? 'Популярные товары';
const headingSize = heading?.size ?? 'small';
const textContent = text?.content ?? '';
const columns = productCard?.columns ?? 4;
const padTop = padding?.top ?? 80;
const padBottom = padding?.bottom ?? 80;

function formatPrice(price: number): string {
  return new Intl.NumberFormat('ru-RU', {
    style: 'currency',
    currency: 'RUB',
    minimumFractionDigits: 0,
  }).format(price);
}
---

<section class={`popular-products popular-products--${headingSize}`} style={`padding-top: ${padTop}px; padding-bottom: ${padBottom}px;`}>
  {headingText && <h2 class="popular-products-heading">{headingText}</h2>}
  {textContent && <p class="popular-products-text">{textContent}</p>}

  {products.length === 0 ? (
    <p class="no-products">Товары скоро появятся</p>
  ) : (
    <div class="popular-products-grid" style={`--columns: ${columns}`}>
      {products.map((product) => (
        <article class="product-card">
          <a href={`/product/${product.slug ?? product.id}`} class="product-link">
            <div class="product-image-wrapper">
              {product.images && product.images[0] ? (
                <img src={product.images[0]} alt={product.name} class="product-image" loading="lazy" />
              ) : (
                <div class="product-image-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21,15 16,10 5,21"/>
                  </svg>
                </div>
              )}
            </div>
            <div class="product-info">
              <h3 class="product-name">{product.name}</h3>
              <div class="product-price">{formatPrice(product.price)}</div>
            </div>
          </a>
        </article>
      ))}
    </div>
  )}
</section>

<style>
  .popular-products {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .popular-products-heading {
    font-family: var(--font-display);
    font-weight: 500;
    text-align: center;
    margin-bottom: 16px;
    color: var(--neutral-900);
    line-height: 1.2;
  }

  .popular-products--small .popular-products-heading { font-size: 1.5rem; }
  .popular-products--medium .popular-products-heading { font-size: 2rem; }
  .popular-products--large .popular-products-heading { font-size: 2.5rem; }

  .popular-products-text {
    text-align: center;
    color: var(--neutral-600);
    font-size: 1.1rem;
    margin-bottom: 40px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .no-products {
    text-align: center;
    color: var(--neutral-500);
    padding: 60px 20px;
    font-size: 1.1rem;
  }

  .popular-products-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: 30px;
  }

  @media (max-width: 1024px) {
    .popular-products-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .popular-products-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
  }

  @media (max-width: 480px) {
    .popular-products-grid { grid-template-columns: 1fr; }
  }

  .product-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .product-image-wrapper {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: var(--rose-50);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }

  .product-card:hover .product-image {
    transform: scale(1.05);
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--rose-300);
  }

  .product-info {
    padding: 20px;
    text-align: center;
  }

  .product-name {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--neutral-800);
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .product-price {
    font-size: 1rem;
    font-weight: 600;
    color: var(--rose-600);
  }
</style>
