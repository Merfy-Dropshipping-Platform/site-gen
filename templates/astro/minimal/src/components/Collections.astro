---
interface CollectionItem {
  name: string;
  description?: string;
  href?: string;
  productCount?: number;
}

interface Props {
  heading?: string;
  collections?: CollectionItem[];
}

const {
  heading = 'Collections',
  collections = [],
} = Astro.props;
---

<section class="section-spacing">
  <div class="page-container">
    <h2 class="text-2xl font-semibold text-theme-foreground mb-8">{heading}</h2>

    <div class="flex flex-col divide-y border-theme">
      {collections.map((col) => (
        <a
          href={col.href || '#'}
          class="flex items-center justify-between py-4 group hover:opacity-80 transition-opacity"
        >
          <div>
            <h3 class="text-base font-medium text-theme-foreground">{col.name}</h3>
            {col.description && (
              <p class="text-sm text-theme-muted mt-0.5">{col.description}</p>
            )}
          </div>
          <div class="flex items-center gap-3">
            {col.productCount !== undefined && (
              <span class="text-sm text-theme-muted">{col.productCount} items</span>
            )}
            <svg class="w-4 h-4 text-theme-muted group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
