---
import { cn } from "../lib/cn";
import { buttonVariants, type ButtonVariants } from "../variants/button";

type Props = ButtonVariants & {
  href?: string;
  class?: string;
};

const { variant, size, fullWidth, href, class: className, ...attrs } = Astro.props;
const classes = cn(buttonVariants({ variant, size, fullWidth }), className);
---
{href
  ? <a href={href} class={classes} {...attrs}><slot /></a>
  : <button class={classes} {...attrs}><slot /></button>
}
