---
import BaseLayout from '../layouts/BaseLayout.astro';
import data from '../data/data.json';
import siteConfig from '../data/site-config.json';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const meta = data?.meta ?? {};
const blocks = data?.content ?? [];
const headerBlock = blocks.find((b: any) => b.type === 'Header');
const footerBlock = blocks.find((b: any) => b.type === 'Footer');
const headerProps = headerBlock?.props ?? (siteConfig as any)?.header ?? {};
const footerProps = footerBlock?.props ?? (siteConfig as any)?.footer ?? {};
---
<BaseLayout title={`Оформление заказа — ${meta?.title ?? 'Мой сайт'}`}>
  <Header {...headerProps} />

  <main class="flex-1 max-w-[600px] mx-auto px-5 py-10 w-full font-manrope">
    <h1 class="text-3xl font-comfortaa text-center mb-8">Оформление заказа</h1>

    <div class="step-indicator flex justify-center gap-3 mb-10">
      <div class="step-dot w-3 h-3 rounded-full bg-[#e11d48] active" data-step="1"></div>
      <div class="step-dot w-3 h-3 rounded-full bg-gray-300" data-step="2"></div>
      <div class="step-dot w-3 h-3 rounded-full bg-gray-300" data-step="3"></div>
      <div class="step-dot w-3 h-3 rounded-full bg-gray-300" data-step="4"></div>
    </div>

    <!-- Шаг 1: Товар -->
    <div class="checkout-step active" data-step="1">
      <h2 class="text-2xl font-comfortaa mb-6">Ваш товар</h2>
      <div class="bg-white p-6 rounded-2xl mb-8 shadow-sm" id="product-summary">
        <p class="text-gray-500">Загрузка...</p>
      </div>
      <!-- Промокод -->
      <div class="mb-6" id="promo-section">
        <div class="flex gap-2" id="promo-input-row">
          <input type="text" id="promo-input" placeholder="Промокод"
            class="flex-1 py-3 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
          <button type="button" id="btn-apply-promo"
            class="py-3 px-6 bg-gray-800 text-white rounded-xl font-medium hover:bg-gray-700 transition-colors text-sm whitespace-nowrap">
            Применить
          </button>
        </div>
        <div id="promo-applied" class="hidden mt-3 p-3 bg-green-50 border border-green-200 rounded-xl">
          <div class="flex items-center justify-between">
            <div>
              <span class="text-green-700 font-medium text-sm" id="promo-applied-code"></span>
              <span class="text-green-600 text-sm ml-2" id="promo-applied-discount"></span>
            </div>
            <button type="button" id="btn-remove-promo" class="text-red-500 hover:text-red-700 text-sm underline">
              Удалить
            </button>
          </div>
        </div>
        <div id="promo-error" class="text-red-600 mt-2 text-sm hidden"></div>
      </div>

      <button class="w-full py-4 px-8 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors" id="btn-to-contacts">Продолжить</button>
      <a href="/" class="block text-center mt-4 text-gray-500 hover:text-[#e11d48] text-sm">Вернуться в магазин</a>
    </div>

    <!-- Шаг 2: Контакты -->
    <div class="checkout-step hidden" data-step="2">
      <h2 class="text-2xl font-comfortaa mb-6">Контактные данные</h2>
      <form id="customer-form">
        <div class="mb-5">
          <label for="email" class="block mb-2 font-medium text-gray-700">Email <span class="text-[#e11d48]">*</span></label>
          <input type="email" id="email" name="email" required placeholder="your@email.com" autocomplete="email" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="phone" class="block mb-2 font-medium text-gray-700">Телефон <span class="text-[#e11d48]">*</span></label>
          <input type="tel" id="phone" name="phone" required placeholder="+7 (999) 123-45-67" autocomplete="tel" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="name" class="block mb-2 font-medium text-gray-700">Имя</label>
          <input type="text" id="name" name="name" placeholder="Иван Иванов" autocomplete="name" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="text-red-600 mt-3 text-sm text-center" id="customer-error"></div>
        <button type="submit" class="w-full py-4 px-8 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors">Продолжить</button>
      </form>
      <button class="block text-center w-full mt-4 text-gray-500 hover:text-[#e11d48] text-sm" id="btn-back-to-product">Назад</button>
    </div>

    <!-- Шаг 3: Адрес -->
    <div class="checkout-step hidden" data-step="3">
      <h2 class="text-2xl font-comfortaa mb-6">Адрес доставки</h2>
      <form id="address-form">
        <div class="mb-5">
          <label for="city" class="block mb-2 font-medium text-gray-700">Город <span class="text-[#e11d48]">*</span></label>
          <input type="text" id="city" name="city" required placeholder="Москва" autocomplete="address-level2" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="street" class="block mb-2 font-medium text-gray-700">Улица <span class="text-[#e11d48]">*</span></label>
          <input type="text" id="street" name="street" required placeholder="ул. Пушкина" autocomplete="street-address" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="building" class="block mb-2 font-medium text-gray-700">Дом <span class="text-[#e11d48]">*</span></label>
          <input type="text" id="building" name="building" required placeholder="10" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="apartment" class="block mb-2 font-medium text-gray-700">Квартира</label>
          <input type="text" id="apartment" name="apartment" placeholder="42" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="mb-5">
          <label for="postalCode" class="block mb-2 font-medium text-gray-700">Индекс</label>
          <input type="text" id="postalCode" name="postalCode" placeholder="101000" autocomplete="postal-code" class="w-full py-3.5 px-4 border border-gray-300 rounded-xl text-base focus:outline-none focus:border-[#f43f5e] focus:ring-2 focus:ring-[#ffe4e6]">
        </div>
        <div class="text-red-600 mt-3 text-sm text-center" id="address-error"></div>
        <button type="submit" class="w-full py-4 px-8 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors">Продолжить</button>
      </form>
      <button class="block text-center w-full mt-4 text-gray-500 hover:text-[#e11d48] text-sm" id="btn-back-to-contacts">Назад</button>
    </div>

    <!-- Шаг 4: Оплата -->
    <div class="checkout-step hidden" data-step="4">
      <h2 class="text-2xl font-comfortaa mb-6">Оплата</h2>
      <div class="bg-white p-6 rounded-2xl mb-6 shadow-sm" id="order-summary">
        <p class="text-gray-500">Загрузка...</p>
      </div>
      <div class="text-red-600 mt-3 text-sm text-center" id="payment-error"></div>
      <button class="w-full py-4 px-8 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors" id="btn-pay">
        <span class="loading hidden"><span class="loading-spinner inline-block w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></span>Создаём платёж...</span>
        <span class="text">Оплатить</span>
      </button>
      <button class="block text-center w-full mt-4 text-gray-500 hover:text-[#e11d48] text-sm" id="btn-back-to-address">Назад</button>
    </div>

    <!-- Ошибка -->
    <div class="checkout-step hidden text-center py-16" data-step="error">
      <h2 class="text-2xl font-comfortaa mb-4" id="error-title">Ошибка</h2>
      <p class="text-gray-500 mb-6" id="error-text">Что-то пошло не так</p>
      <a href="/" class="inline-block py-4 px-8 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors">На главную</a>
    </div>
  </main>

  <Footer {...footerProps} />

  <script is:inline define:vars={{ shopId: meta?.shopId, apiUrl: meta?.apiUrl }}>
    window.__MERFY_CONFIG__ = {
      shopId: shopId || '',
      apiUrl: apiUrl || 'https://gateway.merfy.ru/api',
    };
  </script>
  <script type="module" src="/scripts/checkout.js"></script>
</BaseLayout>

<style>
  .checkout-step { display: none; }
  .checkout-step.active { display: block; }
</style>
