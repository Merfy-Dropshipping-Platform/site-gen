---
interface Props {
  heading?: string | { text?: string; size?: string };
  text?: string | { text?: string };
  align?: 'left' | 'center' | 'right';
  size?: 'small' | 'medium' | 'large';
  padding?: { top?: number; bottom?: number };
}

const props = Astro.props;
const headingText = typeof props.heading === 'object' ? props.heading?.text : props.heading;
const bodyText = typeof props.text === 'object' ? props.text?.text : props.text;
const headingSize = typeof props.heading === 'object' ? props.heading?.size : props.size;
const align = (props.align ?? 'center') as string;
const size = (headingSize ?? props.size ?? 'medium') as string;
const padTop = props.padding?.top ?? 60;
const padBottom = props.padding?.bottom ?? 60;
---

<section class={`text-block text-block--${size}`} style={`text-align: ${align}; padding-top: ${padTop}px; padding-bottom: ${padBottom}px;`}>
  {headingText && <h2 class="text-block-heading">{headingText}</h2>}
  {bodyText && <p class="text-block-text">{bodyText}</p>}
  <slot />
</section>

<style>
  .text-block {
    padding: 60px 20px;
    max-width: 800px;
    margin: 0 auto;
  }

  .text-block--small {
    padding: 40px 20px;
  }

  .text-block--large {
    padding: 80px 20px;
  }

  .text-block-heading {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 500;
    color: var(--neutral-900);
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .text-block--large .text-block-heading {
    font-size: 2.5rem;
  }

  .text-block--small .text-block-heading {
    font-size: 1.5rem;
  }

  .text-block-text {
    font-size: 1.1rem;
    color: var(--neutral-600);
    line-height: 1.7;
  }

  .text-block--large .text-block-text {
    font-size: 1.2rem;
  }

  .text-block--small .text-block-text {
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .text-block {
      padding: 40px 20px;
    }

    .text-block-heading {
      font-size: 1.75rem;
    }

    .text-block--large .text-block-heading {
      font-size: 2rem;
    }
  }
</style>
