---
const { label, href = '#', variant = 'primary' } = Astro.props;
const style =
  variant === 'secondary'
    ? 'background:#e2e8f0;color:#0f172a;'
    : 'background:#0f172a;color:#fff;';
---
<section>
  <a
    href={href}
    style={`display:inline-flex;align-items:center;gap:8px;padding:12px 18px;border-radius:10px;text-decoration:none;font-weight:600;${style}`}
  >
    {label ?? 'Подробнее'}
  </a>
</section>
