---
interface Props {
	id?: string;
	name: string;
	price: string;
	oldPrice?: string;
	image: string;
	href?: string;
}

const { id, name, price, oldPrice, image, href = '#' } = Astro.props;
---

<div class="flex flex-col gap-4 sm:gap-5 md:gap-6 lg:gap-[25px] group">
	<a href={href} class="cursor-pointer">
		<div class="bg-gray-100 rounded-lg sm:rounded-[8px] md:rounded-[10px] overflow-hidden w-full aspect-[318/515]">
			<img
				src={image}
				alt={name}
				loading="lazy"
				class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
			/>
		</div>
	</a>
	<div class="flex flex-col gap-2 sm:gap-2.5 md:gap-3 lg:gap-[10px] px-2 sm:px-3 md:px-4 lg:px-[15px]">
		<a href={href} class="no-underline text-inherit">
			<h3 class="text-base sm:text-lg md:text-xl lg:text-[24px] font-normal text-black leading-[1.366] font-manrope">
				{name}
			</h3>
		</a>
		<div class="flex items-center gap-2 sm:gap-3 md:gap-4 lg:gap-[15px] flex-wrap">
			<span class="text-lg sm:text-xl md:text-2xl lg:text-[32px] font-normal text-black leading-[1.366] font-manrope">
				{price}
			</span>
			{oldPrice && (
				<span class="text-sm sm:text-base md:text-lg lg:text-[20px] font-medium text-[#999999] line-through leading-[1.366] font-manrope">
					{oldPrice}
				</span>
			)}
		</div>
		{id && (
			<button
				type="button"
				class="add-to-cart-btn mt-2 py-2.5 px-5 bg-[#e11d48] text-white text-sm font-medium rounded-lg hover:bg-[#be123c] transition-colors"
				data-product-id={id}
			>
				В корзину
			</button>
		)}
	</div>
</div>
