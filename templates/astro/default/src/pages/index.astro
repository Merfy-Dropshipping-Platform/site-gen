---
import data from '../data/data.json';
import Hero from '../components/Hero.astro';
import TextBlock from '../components/TextBlock.astro';
import ButtonRow from '../components/ButtonRow.astro';

const blocks = data?.content ?? [];
const meta = data?.meta ?? {};
---
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{meta?.title ?? 'Мой сайт на Merfy'}</title>
    {meta?.description && <meta name="description" content={meta.description} />}
    <style>
      :root { font-family: system-ui, -apple-system, 'Segoe UI', sans-serif; color: #0f172a; background: #f8fafc; }
      body { margin: 0; padding: 0; }
      main { max-width: 960px; margin: 0 auto; padding: 32px 16px 64px; display: grid; gap: 24px; }
      section { background: #fff; border: 1px solid #e2e8f0; border-radius: 12px; padding: 24px; box-shadow: 0 8px 24px rgba(15, 23, 42, 0.04); }
      a { color: #0f172a; }
    </style>
  </head>
  <body>
    <main>
      {blocks.length === 0 && (
        <section>
          <h1>Пустой сайт</h1>
          <p>Добавьте блоки в теме, чтобы увидеть контент.</p>
        </section>
      )}
      {blocks.map((b) => {
        switch (b.type) {
          case 'Hero':
            return <Hero {...b.props} />;
          case 'TextBlock':
            return <TextBlock {...b.props} />;
          case 'ButtonRow':
            return <ButtonRow {...b.props} />;
          default:
            return (
              <section>
                <h2>{b.type || 'Неизвестный блок'}</h2>
                <pre>{JSON.stringify(b.props ?? {}, null, 2)}</pre>
              </section>
            );
        }
      })}
    </main>
  </body>
</html>
