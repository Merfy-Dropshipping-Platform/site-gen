---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex flex-col items-center gap-2 sm:gap-3 md:gap-4 lg:gap-[5px] mb-8 sm:mb-10 md:mb-12 lg:mb-16 xl:mb-20">
	<h2 class="text-xl sm:text-2xl md:text-3xl lg:text-[32px] font-normal text-black uppercase leading-[1.115] text-center font-comfortaa">
		{title}
	</h2>
	{subtitle && (
		<p class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-[24px] font-normal text-[#999999] leading-[1.366] text-center px-2 sm:px-4 font-manrope">
			{subtitle}
		</p>
	)}
</div>
