---
import BaseLayout from '../../layouts/BaseLayout.astro';
import data from '../../data/data.json';
import products from '../../data/products.json';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export function getStaticPaths() {
  const productList = products || [];
  return productList.map((product: any) => ({
    params: { id: product.slug ?? product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const meta = data?.meta ?? {};
const blocks = data?.content ?? [];
const headerBlock = blocks.find((b: any) => b.type === 'Header');
const footerBlock = blocks.find((b: any) => b.type === 'Footer');

function formatPrice(price: number): string {
  return new Intl.NumberFormat('ru-RU', {
    style: 'currency',
    currency: 'RUB',
    minimumFractionDigits: 0,
  }).format(price);
}
---
<BaseLayout title={`${product?.name ?? 'Товар'} — ${meta?.title ?? 'Мой магазин'}`} description={product?.description}>
  <Header {...(headerBlock?.props ?? {})} />

  <main class="flex-1 max-w-[1200px] mx-auto px-5 py-10 w-full font-manrope">
    <p class="mb-8 text-sm text-gray-500">
      <a href="/" class="text-gray-500 hover:text-[#e11d48]">Главная</a> /
      <a href="/catalog" class="text-gray-500 hover:text-[#e11d48]">Каталог</a> /
      {product?.name}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-[60px]">
      <!-- Галерея -->
      <div class="flex flex-col gap-4">
        <div class="aspect-[3/4] bg-rose-50 rounded-2xl overflow-hidden">
          {product?.images && product.images[0] ? (
            <img src={product.images[0]} alt={product.name} class="w-full h-full object-cover" />
          ) : (
            <div class="w-full h-full flex items-center justify-center text-rose-300">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
            </div>
          )}
        </div>
      </div>

      <!-- Детали -->
      <div class="pt-0 md:pt-5">
        <h1 class="text-4xl font-comfortaa mb-4 leading-tight">{product?.name}</h1>
        <div class="text-2xl font-semibold text-[#e11d48] mb-6">{formatPrice(product?.price ?? 0)}</div>
        {product?.description && (
          <p class="text-base text-gray-600 leading-relaxed mb-8">{product.description}</p>
        )}
        <a href={`/checkout?productId=${product.slug ?? product.id}`} class="inline-flex items-center justify-center py-4 px-12 bg-[#e11d48] text-white rounded-xl font-medium hover:bg-[#be123c] transition-colors no-underline">Купить сейчас</a>
      </div>
    </div>
  </main>

  <Footer {...(footerBlock?.props ?? {})} />
</BaseLayout>
