---
import { cn } from "../lib/cn";
import { inputVariants, type InputVariants } from "../variants/input";

type Props = InputVariants & {
  class?: string;
};

const { variant, size, class: className, ...attrs } = Astro.props;
const classes = cn(inputVariants({ variant, size }), className);
---
<input class={classes} {...attrs} />
