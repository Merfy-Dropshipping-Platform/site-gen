---
interface Props {
  siteName?: string;
}
const { siteName = 'ROSE' } = Astro.props;
const year = new Date().getFullYear();

// Load dynamic site config (generated from constructor revision data)
let siteConfig: any = { footer: {} };
try {
  siteConfig = await import('../data/site-config.json');
} catch {
  // Fallback: site-config.json not present
}

const footer = siteConfig.footer || {};

// Navigation column
const navColumn = footer.navigationColumn || {
  title: 'Магазин',
  links: [
    { label: 'Каталог', href: '/catalog' },
    { label: 'Новинки', href: '/new' },
    { label: 'Распродажа', href: '/sale' },
  ],
};

// Information column
const infoColumn = footer.informationColumn || {
  title: 'Информация',
  links: [
    { label: 'О нас', href: '/about' },
    { label: 'Доставка', href: '/delivery' },
    { label: 'Возврат', href: '/returns' },
  ],
};

// Social/contact column
const socialColumn = footer.socialColumn || {
  title: 'Контакты',
  email: 'hello@example.com',
  socialLinks: [],
};

// Copyright
const copyright = footer.copyright || {
  companyName: siteName,
  showYear: 'true',
  poweredBy: 'Powered by Merfy',
};

const displayName = copyright.companyName || siteName;
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main">
      <div class="footer-brand">
        <span class="footer-logo">{displayName}</span>
        <p class="footer-tagline">Ваш стиль, ваша индивидуальность</p>
      </div>
      <div class="footer-links">
        <div class="footer-column">
          <h4>{navColumn.title}</h4>
          {(navColumn.links || []).map((link: { label: string; href: string }) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </div>
        <div class="footer-column">
          <h4>{infoColumn.title}</h4>
          {(infoColumn.links || []).map((link: { label: string; href: string }) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </div>
        <div class="footer-column">
          <h4>{socialColumn.title}</h4>
          {socialColumn.email && (
            <a href={`mailto:${socialColumn.email}`}>{socialColumn.email}</a>
          )}
          {(socialColumn.socialLinks || []).map((social: { platform: string; href: string }) => (
            <a href={social.href}>{social.platform}</a>
          ))}
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>{copyright.showYear !== 'false' && `© ${year} `}{displayName}. Все права защищены.</p>
      <p class="powered-by">
        Создано на <a href="https://merfy.ru" target="_blank" rel="noopener">Merfy</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--neutral-900);
    color: var(--neutral-300);
    padding: 60px 20px 30px;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    gap: 60px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--neutral-700);
  }

  .footer-brand {
    max-width: 280px;
  }

  .footer-logo {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--rose-400);
    letter-spacing: 0.05em;
  }

  .footer-tagline {
    margin-top: 12px;
    font-size: 0.9rem;
    color: var(--neutral-400);
  }

  .footer-links {
    display: flex;
    gap: 60px;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-column h4 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 500;
    color: #fff;
    margin-bottom: 4px;
  }

  .footer-column a {
    font-size: 0.9rem;
    color: var(--neutral-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-column a:hover {
    color: var(--rose-400);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 24px;
    font-size: 0.85rem;
    color: var(--neutral-500);
  }

  .powered-by a {
    color: var(--rose-400);
    text-decoration: none;
  }

  .powered-by a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      gap: 40px;
    }

    .footer-links {
      flex-wrap: wrap;
      gap: 40px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 12px;
      text-align: center;
    }
  }
</style>
