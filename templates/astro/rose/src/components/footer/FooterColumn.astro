---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col gap-4 sm:gap-5 lg:gap-[25px]">
	<h3 class="text-lg sm:text-xl md:text-[22px] lg:text-[24px] font-normal text-black uppercase leading-[1.115] font-comfortaa">
		{title}
	</h3>
	<div class="flex flex-col gap-4 sm:gap-5 lg:gap-[25px]">
		<slot />
	</div>
</div>
