---
interface Props {
  siteName?: string;
}
const { siteName = 'ROSE' } = Astro.props;

// Load dynamic site config (generated from constructor revision data)
let siteConfig: any = { header: {} };
try {
  siteConfig = await import('../data/site-config.json');
} catch {
  // Fallback: site-config.json not present
}

const header = siteConfig.header || {};
const displayName = header.siteTitle || siteName;
const navigationLinks: { label: string; href: string; submenu?: { label: string; href: string }[] }[] =
  header.navigationLinks?.length > 0
    ? header.navigationLinks
    : [
      { label: 'Главная', href: '/' },
      { label: 'Каталог', href: '/catalog' },
      { label: 'О нас', href: '/about' },
      { label: 'Контакты', href: '/contacts' },
    ];
const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">{displayName}</a>
    <nav class="nav">
      {navigationLinks.map((link) => (
        <a href={link.href} class:list={[{ active: currentPath === link.href }]}>{link.label}</a>
      ))}
    </nav>
    <div class="header-actions">
      <button class="icon-btn" aria-label="Поиск">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
      </button>
      <button class="icon-btn" aria-label="Корзина">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/>
          <path d="M3 6h18"/>
          <path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--neutral-200);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
  }

  .logo {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--rose-600);
    letter-spacing: 0.05em;
    text-decoration: none;
  }

  .nav {
    display: flex;
    gap: 32px;
  }

  .nav a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--neutral-700);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: var(--rose-600);
  }

  .header-actions {
    display: flex;
    gap: 8px;
  }

  .icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: none;
    background: transparent;
    border-radius: 50%;
    cursor: pointer;
    color: var(--neutral-700);
    transition: background 0.2s, color 0.2s;
  }

  .icon-btn:hover {
    background: var(--rose-50);
    color: var(--rose-600);
  }

  @media (max-width: 768px) {
    .nav {
      display: none;
    }
  }
</style>
