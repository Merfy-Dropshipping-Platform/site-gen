---
interface Product {
  id: string;
  name: string;
  description?: string;
  price: number;
  compareAtPrice?: number;
  images?: string[];
  slug?: string;
}

interface Props {
  products: Product[];
  title?: string;
  columns?: number;
}

const { products = [], title = 'Каталог', columns = 4 } = Astro.props;

function formatPrice(price: number): string {
  return new Intl.NumberFormat('ru-RU', {
    style: 'currency',
    currency: 'RUB',
    minimumFractionDigits: 0,
  }).format(price);
}
---

<section class="product-section">
  {title && <h2 class="section-title">{title}</h2>}

  {products.length === 0 ? (
    <p class="no-products">Товары скоро появятся</p>
  ) : (
    <div class="product-grid" style={`--columns: ${columns}`}>
      {products.map((product) => (
        <article class="product-card">
          <a href={`/product/${product.slug ?? product.id}`} class="product-link">
            <div class="product-image-wrapper">
              {product.images && product.images[0] ? (
                <img
                  src={product.images[0]}
                  alt={product.name}
                  class="product-image"
                  loading="lazy"
                />
              ) : (
                <div class="product-image-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21,15 16,10 5,21"/>
                  </svg>
                </div>
              )}
              <div class="product-overlay">
                <div class="product-overlay-buttons">
                  <span class="view-btn">Подробнее</span>
                  <a href={`/checkout?productId=${product.slug ?? product.id}`} class="buy-btn" onclick="event.stopPropagation();">Купить</a>
                </div>
              </div>
            </div>
            <div class="product-info">
              <h3 class="product-name">{product.name}</h3>
              <div class="product-price-row">
                <span class="product-price">{formatPrice(product.price)}</span>
                {product.compareAtPrice != null && product.compareAtPrice > product.price && (
                  <span class="product-old-price">{formatPrice(product.compareAtPrice)}</span>
                )}
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  )}
</section>

<style>
  .product-section {
    padding: 40px 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 500;
    text-align: center;
    margin-bottom: 40px;
    color: var(--neutral-900);
  }

  .no-products {
    text-align: center;
    color: var(--neutral-500);
    padding: 60px 20px;
    font-size: 1.1rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: 30px;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
  }

  .product-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .product-image-wrapper {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: var(--rose-50);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s;
  }

  .product-card:hover .product-image {
    transform: scale(1.05);
  }

  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--rose-300);
  }

  .product-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .product-card:hover .product-overlay {
    opacity: 1;
  }

  .product-overlay-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
    transform: translateY(10px);
    transition: transform 0.3s;
  }

  .product-card:hover .product-overlay-buttons {
    transform: translateY(0);
  }

  .view-btn {
    background: #fff;
    color: var(--neutral-900);
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    text-align: center;
  }

  .buy-btn {
    background: var(--rose-600);
    color: #fff;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transition: background 0.2s;
  }

  .buy-btn:hover {
    background: var(--rose-700);
  }

  .product-info {
    padding: 20px;
    text-align: center;
  }

  .product-name {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--neutral-800);
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .product-price-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .product-price {
    font-size: 1rem;
    font-weight: 600;
    color: var(--rose-600);
  }

  .product-old-price {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--neutral-400, #999);
    text-decoration: line-through;
  }
</style>
